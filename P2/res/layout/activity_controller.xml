<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.p2.MainActivity" >

    <Button
        android:id="@+id/Send"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="117dp"
        android:text="@string/SendButtonText" />

    <EditText
        android:id="@+id/receivedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:ems="5" />

    <RelativeLayout
        android:layout_width="@dimen/main_button_group_size"
        android:layout_height="@dimen/main_button_group_size"
        android:layout_alignBottom="@+id/receivedText"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp" >

        <ui.AnalogButton
            android:id="@+id/analogButtonA"
            android:layout_width="@dimen/main_button_size"
            android:layout_height="@dimen/main_button_size"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <ui.AnalogButton
            android:id="@+id/analogButtonB"
            android:layout_width="@dimen/main_button_size"
            android:layout_height="@dimen/main_button_size"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <ui.AnalogButton
            android:id="@+id/analogButtonX"
            android:layout_width="@dimen/main_button_size"
            android:layout_height="@dimen/main_button_size"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <ui.AnalogButton
            android:id="@+id/analogButtonY"
            android:layout_width="@dimen/main_button_size"
            android:layout_height="@dimen/main_button_size"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <ui.AnalogStick
        android:id="@+id/analogStick1"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignBottom="@+id/receivedText"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp" />

</RelativeLayout>